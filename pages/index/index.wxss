/**index.wxss**/
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.note-splash {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  margin-left: -250rpx;
  z-index: 900;
  width: 500rpx;
  height: 312rpx;
}

.note-gradient {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(to top, rgba(255,255,255,1) 30%, rgba(255,255,255,0));
  z-index: 900;
}
.note-btn2 {
  position: fixed;
  bottom: 8rpx;
  left: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}

.note-btn3 {
  position: fixed;
  top: 10%;
  right: 1%;
}

.note-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  margin-left: -70rpx;
  width: 140rpx;
  height: 140rpx;
  background: #39b54a;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 10px rgba(0, 49, 114, .5);
  transition: all 300ms ease;
  z-index: 1000;
}

.note-btn:active {
  background: #025bd1;
  box-shadow: none;
}

.note-btn image {
  width: 64rpx;
  height: 64rpx;
}

/* 以下定义动画帧 */
@keyframes blinking {
  0% {
    background: #006eff;
  }
  50% {
    background: #025bd1;
  }
  100% {
    background: #006eff;
  }
}